{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@digipair/engine": ["libs/engine/src/index.ts"],
      "@digipair/skill-chatbot": ["libs/skill-chatbot/src/index.ts"],
      "@digipair/skill-common": ["libs/skill-common/src/index.ts"],
      "@digipair/skill-dsp": ["libs/skill-dsp/src/index.ts"],
      "@digipair/skill-editor": ["libs/skill-editor/src/index.ts"],
      "@digipair/skill-llm": ["libs/skill-llm/src/index.ts"],
      "@digipair/skill-ollama": ["libs/skill-ollama/src/index.ts"],
      "@digipair/skill-openai": ["libs/skill-openai/src/index.ts"],
      "@digipair/skill-vespa": ["libs/skill-vespa/src/index.ts"],
      "@digipair/skill-web": ["libs/skill-web/src/index.ts"],
      "@digipair/skill-web-chatbot": ["libs/skill-web-chatbot/src/index.ts"],
      "@digipair/skill-web-editor": ["libs/skill-web-editor/src/index.ts"],
      "@digipair/skill-web-inputs": ["libs/skill-web-inputs/src/index.ts"],
      "@digipair/skill-web-interact": ["libs/skill-web-interact/src/index.ts"],
      "@digipair/skill-web-ocr": ["libs/skill-web-ocr/src/index.ts"],
      "@digipair/skill-web-pdf": ["libs/skill-web-pdf/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
