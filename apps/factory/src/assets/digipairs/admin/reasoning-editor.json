{
  "description": "Reasoning editor",
  "summary": "Reasoning editor",
  "library": "@digipair/skill-web",
  "element": "page",
  "metadata": {},
  "properties": {
    "body": [
      {
        "library": "@digipair/skill-web-spectrum",
        "element": "sp-theme",
        "pins": [
          {
            "library": "@digipair/skill-web-spectrum",
            "element": "sp-top-nav",
            "pins": [
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-top-nav-item",
                "pins": [
                  {
                    "library": "web",
                    "element": "img",
                    "properties": {
                      "src": "https://res.cloudinary.com/do87nxq3l/image/upload/v1718033538/Fichier_1_zunbli.png",
                      "style": "height: 20px;"
                    }
                  }
                ],
                "properties": {
                  "href": "https://www.digipair.ai"
                }
              },
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-top-nav-item",
                "properties": {
                  "textContent": "Home",
                  "href": "/admin/digipair-list"
                }
              },
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-top-nav-item",
                "properties": {
                  "textContent": "{{variables.digipair.name}}",
                  "href": "/admin/reasoning-list/{{variables.digipair.id}}"
                }
              },
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-top-nav-item",
                "properties": {
                  "textContent": "{{variables.reasoning.summary}}"
                }
              },
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-action-group",
                "pins": [
                  {
                    "library": "@digipair/skill-web-spectrum",
                    "element": "sp-action-button",
                    "pins": [
                      {
                        "library": "@digipair/skill-web-font-awesome",
                        "element": "digipair-font-awesome-icon",
                        "properties": {
                          "name": "file-code",
                          "category": "regular"
                        }
                      }
                    ],
                    "events": {
                      "click": [
                        {
                          "library": "@digipair/skill-web-interact",
                          "element": "goTo",
                          "properties": {
                            "url": "/admin/json-editor/{{variables.digipair.id}}/{{variables.reasoning.id}}"
                          }
                        }
                      ]
                    }
                  },
                  {
                    "library": "@digipair/skill-web-spectrum",
                    "element": "sp-action-button",
                    "pins": [
                      {
                        "library": "@digipair/skill-web-font-awesome",
                        "element": "digipair-font-awesome-icon",
                        "properties": {
                          "name": "eye",
                          "category": "regular"
                        }
                      }
                    ],
                    "events": {
                      "click": [
                        {
                          "library": "@digipair/skill-web-interact",
                          "element": "goTo",
                          "properties": {
                            "url": "/{{variables.digipair.id}}/{{variables.reasoning.id}}",
                            "target": "_blank"
                          }
                        }
                      ]
                    },
                    "conditions": {
                      "if": "EVALUATE:variables.reasoning.element = \"page\""
                    }
                  },
                  {
                    "library": "@digipair/skill-web-spectrum",
                    "element": "sp-action-button",
                    "pins": [
                      {
                        "library": "@digipair/skill-web-font-awesome",
                        "element": "digipair-font-awesome-icon",
                        "properties": {
                          "name": "floppy-disk",
                          "category": "regular"
                        }
                      }
                    ],
                    "events": {
                      "click": [
                        {
                          "library": "@digipair/skill-web-interact",
                          "element": "getAttribute",
                          "properties": {
                            "selector": "digipair-editor",
                            "attribute": "codeInWorkspace"
                          }
                        },
                        {
                          "library": "@digipair/skill-web",
                          "element": "executeFactory",
                          "properties": {
                            "execute": [
                              {
                                "library": "@digipair/skill-editor",
                                "element": "setReasoning",
                                "properties": {
                                  "digipair": "{{request.params.[0]}}",
                                  "reasoning": "{{request.params.[1]}}",
                                  "value": "EVALUATE:parent.previous"
                                }
                              }
                            ]
                          }
                        },
                        {
                          "library": "@digipair/skill-web-notification",
                          "element": "information",
                          "properties": {
                            "message": "Saved !"
                          }
                        }
                      ]
                    }
                  }
                ],
                "properties": {
                  "size": "s",
                  "style": "margin-inline-start: auto;"
                }
              }
            ]
          },
          {
            "library": "@digipair/skill-web-editor",
            "element": "digipair-editor",
            "properties": {
              "reasoning": "EVALUATE:variables.reasoning",
              "webBaseUrl": "EVALUATE:request.webBaseUrl",
              "schemas": "EVALUATE:variables.schemas",
              "menuBackgroundColor": "#212e3c",
              "contentStyle": "position: fixed; top: 69px; right: 0; bottom: 0; left: 0;",
              "language": "en"
            }
          }
        ],
        "properties": {
          "color": "light",
          "scale": "large"
        }
      },
      {
        "library": "@digipair/skill-web-chatbot",
        "element": "digipair-chatbot",
        "properties": {
          "code": "{{request.digipair}}",
          "apiUrl": ""
        }
      }
    ],
    "styleHtml": "color-scheme:light;\nbackground-color: #f4f4f4;",
    "factoryInitialize": [
      {
        "library": "@digipair/skill-basic",
        "element": "setVariable",
        "properties": {
          "name": "digipair",
          "execute": [
            {
              "library": "@digipair/skill-editor",
              "element": "digipair",
              "properties": {
                "digipair": "{{request.params.[0]}}"
              }
            }
          ]
        }
      },
      {
        "library": "@digipair/skill-basic",
        "element": "setVariable",
        "properties": {
          "name": "reasoning",
          "execute": [
            {
              "library": "@digipair/skill-editor",
              "element": "reasoning",
              "properties": {
                "digipair": "{{request.params.[0]}}",
                "reasoning": "{{request.params.[1]}}"
              }
            }
          ]
        }
      },
      {
        "library": "@digipair/skill-basic",
        "element": "setVariable",
        "properties": {
          "name": "schemasLibraries",
          "execute": [
            {
              "library": "@digipair/skill-editor",
              "element": "schemas",
              "properties": {
                "libraries": "EVALUATE:context(get entries(variables.digipair.libraries)[substring(item.key, 1, 9) != \"digipair:\"])",
                "language": "en"
              }
            }
          ]
        }
      },
      {
        "library": "@digipair/skill-basic",
        "element": "setVariable",
        "properties": {
          "name": "schemasDigipair",
          "execute": [
            {
              "library": "@digipair/skill-editor",
              "element": "digipairs"
            },
            {
              "library": "@digipair/skill-factory",
              "element": "start",
              "properties": {
                "reasoning": "schema.json",
                "digipair": "{{item}}"
              },
              "conditions": {
                "each": "EVALUATE:previous"
              }
            }
          ]
        }
      },
      {
        "library": "@digipair/skill-basic",
        "element": "setVariable",
        "properties": {
          "name": "schemasRemote",
          "execute": [
            {
              "library": "@digipair/skill-basic",
              "element": "transform",
              "properties": {
                "execute": [
                  {
                    "library": "@digipair/skill-http",
                    "element": "read",
                    "properties": {
                      "path": "EVALUATE:item.value + \"/\" + split(item.key, \"digipair:\")[2] + \"/schema.json\""
                    }
                  }
                ]
              },
              "conditions": {
                "each": "EVALUATE:get entries(variables.digipair.libraries)[starts with(key, \"digipair:\") and starts with(value, \"http\")]"
              }
            }
          ]
        }
      },
      {
        "library": "@digipair/skill-basic",
        "element": "setVariable",
        "properties": {
          "name": "schemas",
          "execute": [
            {
              "library": "@digipair/skill-basic",
              "element": "transform",
              "properties": {
                "value": "EVALUATE:flatten([variables.schemasLibraries, variables.schemasRemote, variables.schemasDigipair])"
              }
            }
          ]
        }
      }
    ]
  },
  "pins": []
}
