{
  "name": "Editeur de raisonnement",
  "description": "Editeur de raisonnement",
  "library": "@digipair/skill-web",
  "element": "page",
  "metadata": {},
  "properties": {
    "body": [
      {
        "library": "@digipair/skill-web-spectrum",
        "element": "sp-theme",
        "pins": [
          {
            "library": "@digipair/skill-web-spectrum",
            "element": "sp-top-nav",
            "pins": [
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-top-nav-item",
                "properties": {
                  "textContent": "Accueil",
                  "href": "/admin/digipair-list"
                }
              },
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-top-nav-item",
                "properties": {
                  "textContent": "{{data.digipair.name}}",
                  "href": "/admin/reasoning-list/{{data.digipair.id}}"
                }
              },
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-top-nav-item",
                "properties": {
                  "textContent": "{{data.reasoning.name}}"
                }
              }
            ]
          },
          {
            "library": "@digipair/skill-web-editor",
            "element": "digipair-editor",
            "properties": {
              "digipair": "EVALUATE:data.digipair",
              "reasoning": "EVALUATE:data.reasoning",
              "menuBackgroundColor": "#121212",
              "contentStyle": "position: fixed; top: 69px; right: 0; bottom: 0; left: 0;"
            },
            "events": {
              "save": [
                {
                  "library": "@digipair/skill-web",
                  "element": "executeFactory",
                  "properties": {
                    "execute": [
                      {
                        "library": "@digipair/skill-editor",
                        "element": "setReasoning",
                        "properties": {
                          "digipair": "{{event.digipair}}",
                          "reasoning": "{{event.reasoning}}",
                          "value": "EVALUATE:event.value"
                        }
                      }
                    ]
                  }
                },
                {
                  "library": "@digipair/skill-web-editor",
                  "element": "information",
                  "properties": {
                    "message": "Successfully saved !"
                  }
                }
              ]
            }
          }
        ],
        "properties": {
          "color": "dark",
          "scale": "large"
        }
      },
      {
        "library": "@digipair/skill-web-chatbot",
        "element": "digipair-chatbot",
        "properties": {
          "code": "{{request.digipair}}"
        }
      }
    ],
    "data": [
      {
        "name": "digipair",
        "value": [
          {
            "library": "@digipair/skill-editor",
            "element": "digipair",
            "properties": {
              "digipair": "{{request.params.[0]}}"
            }
          }
        ]
      },
      {
        "name": "reasoning",
        "value": [
          {
            "library": "@digipair/skill-editor",
            "element": "reasoning",
            "properties": {
              "digipair": "{{request.params.[0]}}",
              "reasoning": "{{request.params.[1]}}"
            }
          }
        ]
      }
    ],
    "styleHtml": "color-scheme:dark;"
  },
  "pins": []
}
