{
  "description": "Generating a response for the user via the chatbot.",
  "summary": "Conversation",
  "library": "@digipair/skill-chatbot",
  "element": "boost",
  "metadata": {
    "standalone": false,
    "selector": "any",
    "url": "^$"
  },
  "properties": {
    "steps": [
      {
        "name": "Conversation",
        "execute": [
          {
            "library": "@digipair/skill-basic",
            "element": "setVariable",
            "properties": {
              "name": "history",
              "value": "EVALUATE:if request.body.inputs[1].value = null then []\nelse request.body.inputs[1].value"
            }
          },
          {
            "library": "@digipair/skill-dsp",
            "element": "generate",
            "properties": {
              "signature": "\"You are a helpful assistant, capable of explaining concepts in a simple manner.\" \nuserQuestion:string,\nhistory?:string[] ->\n  answer: string \"Assistant answer\"",
              "input": {
                "userQuestion": "{{request.body.prompt}}",
                "history": "EVALUATE:variables.history"
              }
            }
          },
          {
            "library": "@digipair/skill-factory",
            "element": "start",
            "properties": {
              "reasoning": "answer",
              "body": {
                "assistant": "{{previous.answer}}",
                "boost": [
                  {
                    "prompt": true,
                    "required": true,
                    "step": "Conversation",
                    "inputs": [
                      {
                        "library": "@digipair/skill-web-inputs",
                        "element": "digipair-input-hidden",
                        "properties": {
                          "value": "EVALUATE:flatten([variables.history, [\n  \"user: \" + request.body.prompt,\n  \"assistant: \" + parent.previous.answer\n]])"
                        }
                      }
                    ]
                  }
                ]
              }
            }
          }
        ]
      }
    ]
  },
  "pins": []
}
