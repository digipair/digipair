{
  "description": "Raisonnement concernant l'utilisation ou la gestion des outils.",
  "summary": "Tool agents",
  "library": "@digipair/skill-web",
  "element": "page",
  "metadata": {},
  "properties": {
    "body": [
      {
        "library": "@digipair/skill-web-spectrum",
        "element": "sp-theme",
        "pins": [
          {
            "library": "web",
            "element": "section",
            "pins": [
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-top-nav",
                "pins": [
                  {
                    "library": "@digipair/skill-web-spectrum",
                    "element": "sp-top-nav-item",
                    "pins": [
                      {
                        "library": "web",
                        "element": "img",
                        "properties": {
                          "src": "https://res.cloudinary.com/do87nxq3l/image/upload/fl_preserve_transparency/v1717769492/logo-digipair_oyvvxz.png?_s=public-apps",
                          "style": "height: 20px;"
                        }
                      }
                    ],
                    "properties": {
                      "href": "https://www.digipair.ai"
                    }
                  },
                  {
                    "library": "@digipair/skill-web-spectrum",
                    "element": "sp-top-nav-item",
                    "properties": {
                      "textContent": "Tool agents",
                      "href": "/studio/tools"
                    }
                  },
                  {
                    "library": "@digipair/skill-web-spectrum",
                    "element": "sp-top-nav-item",
                    "properties": {
                      "textContent": "Worker agents",
                      "href": "/studio/workers"
                    }
                  },
                  {
                    "library": "@digipair/skill-web-spectrum",
                    "element": "sp-action-menu",
                    "pins": [
                      {
                        "library": "@digipair/skill-web-spectrum",
                        "element": "sp-menu-item",
                        "properties": {
                          "textContent": "View logs",
                          "href": "/studio/logs"
                        }
                      },
                      {
                        "library": "@digipair/skill-web-spectrum",
                        "element": "sp-menu-item",
                        "properties": {
                          "textContent": "View processes",
                          "href": "/studio/process-list"
                        }
                      },
                      {
                        "library": "@digipair/skill-web-spectrum",
                        "element": "sp-menu-item",
                        "properties": {
                          "textContent": "View LLM consumption",
                          "href": "/studio/consumptions"
                        }
                      },
                      {
                        "library": "@digipair/skill-web-spectrum",
                        "element": "sp-menu-item",
                        "properties": {
                          "textContent": "View the monthly LLM consumption",
                          "href": "/studio/consumptions-monthly"
                        }
                      },
                      {
                        "library": "@digipair/skill-web-spectrum",
                        "element": "sp-menu-item",
                        "properties": {
                          "textContent": "Settings",
                          "href": "/studio/common-edit"
                        }
                      }
                    ],
                    "properties": {
                      "style": "margin-inline-start: auto;",
                      "quiet": true
                    }
                  }
                ]
              }
            ],
            "properties": {
              "style": "background-color: white;\npadding: 0 20px 0 20px;\nposition: fixed;\nz-index: 10000;\ntop: 0;\nleft: 0;\nright: 0;"
            }
          },
          {
            "library": "web",
            "element": "h4",
            "properties": {
              "textContent": "Tools agents"
            }
          },
          {
            "library": "web",
            "element": "div",
            "properties": {
              "textContent": "You haven't created a tool agent yet? What are you waiting for?"
            },
            "conditions": {
              "if": "FEEL: count(variables.digipairTools) <= 0"
            }
          },
          {
            "library": "web",
            "element": "div",
            "pins": [
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-card",
                "pins": [
                  {
                    "library": "web",
                    "element": "img",
                    "properties": {
                      "src": "FEEL: item.metadata.avatar",
                      "style": "height: 60px;",
                      "slot": "preview"
                    }
                  }
                ],
                "properties": {
                  "style": "overflow: hidden;\nmargin: 5px;\ncursor: pointer;",
                  "id": "{{item.infos.id}}",
                  "horizontal": true,
                  "subheading": "{{item.infos.name}}"
                }
              },
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-overlay",
                "pins": [
                  {
                    "library": "@digipair/skill-web-spectrum",
                    "element": "sp-popover",
                    "pins": [
                      {
                        "library": "@digipair/skill-web-spectrum",
                        "element": "sp-menu",
                        "pins": [
                          {
                            "library": "@digipair/skill-web-spectrum",
                            "element": "sp-menu-item",
                            "properties": {
                              "textContent": "Settings",
                              "href": "/studio/tool-edit/{{item.infos.id}}"
                            }
                          },
                          {
                            "library": "@digipair/skill-web-spectrum",
                            "element": "sp-menu-item",
                            "properties": {
                              "textContent": "Task list",
                              "href": "/studio/tool-tasks/{{item.infos.id}}"
                            }
                          },
                          {
                            "library": "@digipair/skill-web-spectrum",
                            "element": "sp-menu-item",
                            "properties": {
                              "textContent": "Remove"
                            },
                            "events": {
                              "click": [
                                {
                                  "library": "@digipair/skill-web-notification",
                                  "element": "confirm",
                                  "properties": {
                                    "message": "Are you sure you want to delete \"{{item.infos.name}}\" ?",
                                    "ok": [
                                      {
                                        "library": "@digipair/skill-web",
                                        "element": "executeFactory",
                                        "properties": {
                                          "execute": [
                                            {
                                              "library": "@digipair/skill-basic",
                                              "element": "setVariable",
                                              "properties": {
                                                "name": "reasonings",
                                                "execute": [
                                                  {
                                                    "library": "@digipair/skill-editor",
                                                    "element": "reasonings",
                                                    "properties": {
                                                      "digipair": "{{item.infos.id}}"
                                                    }
                                                  }
                                                ]
                                              }
                                            },
                                            {
                                              "library": "@digipair/skill-editor",
                                              "element": "removeDigipair",
                                              "properties": {
                                                "digipair": "{{item.infos.id}}"
                                              }
                                            },
                                            {
                                              "library": "@digipair/skill-git",
                                              "element": "commit",
                                              "conditions": {
                                                "if": "FEEL: privates.GIT_COMMIT = true"
                                              }
                                            },
                                            {
                                              "library": "@digipair/skill-git",
                                              "element": "push",
                                              "conditions": {
                                                "if": "FEEL: privates.GIT_PUSH = true"
                                              }
                                            }
                                          ]
                                        }
                                      },
                                      {
                                        "library": "@digipair/skill-web-interact",
                                        "element": "reload"
                                      }
                                    ]
                                  }
                                }
                              ]
                            }
                          },
                          {
                            "library": "@digipair/skill-web-spectrum",
                            "element": "sp-menu-item",
                            "properties": {
                              "textContent": "Talk",
                              "href": "/{{item.infos.id}}/chat",
                              "target": "_blank"
                            }
                          }
                        ]
                      }
                    ]
                  }
                ],
                "properties": {
                  "trigger": "{{item.infos.id}}@click",
                  "placement": "left-end"
                }
              }
            ],
            "conditions": {
              "each": "FEEL: variables.digipairTools"
            }
          },
          {
            "library": "web",
            "element": "br"
          },
          {
            "library": "web",
            "element": "br"
          },
          {
            "library": "@digipair/skill-web-spectrum",
            "element": "sp-action-group",
            "pins": [
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-action-button",
                "pins": [
                  {
                    "library": "@digipair/skill-web-font-awesome",
                    "element": "digipair-font-awesome-icon",
                    "properties": {
                      "name": "plus"
                    }
                  }
                ],
                "properties": {
                  "href": "/studio/tool-add",
                  "quiet": true
                }
              }
            ]
          },
          {
            "library": "web",
            "element": "br"
          },
          {
            "library": "web",
            "element": "br"
          },
          {
            "library": "@digipair/skill-web-spectrum",
            "element": "sp-action-group",
            "pins": [
              {
                "library": "@digipair/skill-web-spectrum",
                "element": "sp-action-button",
                "pins": [
                  {
                    "library": "@digipair/skill-web-font-awesome",
                    "element": "digipair-font-awesome-icon",
                    "properties": {
                      "name": "plus"
                    }
                  }
                ],
                "properties": {
                  "href": "/studio/tool-add/role-tool",
                  "quiet": true
                }
              }
            ]
          }
        ],
        "properties": {
          "system": "spectrum",
          "color": "light",
          "scale": "medium"
        }
      },
      {
        "library": "@digipair/skill-web-chatbot",
        "element": "digipair-chatbot",
        "properties": {
          "code": "{{request.digipair}}"
        }
      }
    ],
    "styleHtml": "color-scheme:light;\npadding: 60px 40px 80px 40px;",
    "browserInitialize": [
      {
        "library": "@digipair/skill-basic",
        "element": "setVariable",
        "properties": {
          "name": "digipairs",
          "execute": [
            {
              "library": "@digipair/skill-web",
              "element": "executeFactory",
              "properties": {
                "execute": [
                  {
                    "library": "@digipair/skill-editor",
                    "element": "digipairs"
                  },
                  {
                    "library": "@digipair/skill-basic",
                    "element": "transform",
                    "properties": {
                      "execute": [
                        {
                          "library": "@digipair/skill-basic",
                          "element": "setVariable",
                          "properties": {
                            "name": "infos",
                            "execute": [
                              {
                                "library": "@digipair/skill-editor",
                                "element": "digipair",
                                "properties": {
                                  "digipair": "{{item}}"
                                }
                              }
                            ]
                          }
                        },
                        {
                          "library": "@digipair/skill-basic",
                          "element": "setVariable",
                          "properties": {
                            "name": "metadata",
                            "execute": [
                              {
                                "library": "@digipair/skill-editor",
                                "element": "metadata",
                                "properties": {
                                  "digipair": "{{item}}"
                                }
                              }
                            ]
                          }
                        },
                        {
                          "library": "@digipair/skill-basic",
                          "element": "transform",
                          "properties": {
                            "value": {
                              "infos": "FEEL: variables.infos",
                              "metadata": "FEEL: variables.metadata"
                            }
                          }
                        }
                      ]
                    },
                    "conditions": {
                      "each": "FEEL:previous[starts with(item, \"tool-\") or starts with(item, \"role-tool-\")]"
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "library": "@digipair/skill-basic",
        "element": "setVariable",
        "properties": {
          "name": "digipairTools",
          "execute": [
            {
              "library": "@digipair/skill-web",
              "element": "executeFactory",
              "properties": {
                "execute": [
                  {
                    "library": "@digipair/skill-basic",
                    "element": "transform",
                    "properties": {
                      "execute": [
                        {
                          "library": "@digipair/skill-basic",
                          "element": "transform",
                          "properties": {
                            "value": {
                              "infos": "FEEL: item.infos",
                              "metadata": "FEEL: item.metadata"
                            }
                          }
                        }
                      ]
                    },
                    "conditions": {
                      "if": "FEEL: starts with(item.infos.digipair,\"tool-\")",
                      "each": "FEEL: variables.digipairs"
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "library": "@digipair/skill-basic",
        "element": "setVariable",
        "properties": {
          "name": "digipairRoleTools",
          "execute": [
            {
              "library": "@digipair/skill-web",
              "element": "executeFactory",
              "properties": {
                "execute": [
                  {
                    "library": "@digipair/skill-basic",
                    "element": "transform",
                    "properties": {
                      "execute": [
                        {
                          "library": "@digipair/skill-basic",
                          "element": "transform",
                          "properties": {
                            "value": {
                              "infos": "FEEL: item.infos",
                              "metadata": "FEEL: item.metadata"
                            }
                          }
                        }
                      ]
                    },
                    "conditions": {
                      "if": "FEEL: starts with(item.infos.digipair,\"role-tool-\")",
                      "each": "FEEL: variables.digipairs"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "pins": []
}