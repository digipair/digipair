  "paths": {
    "/model": {
      "post": {
        "tags": ["service"],
        "summary": "OpenAI LLM Model",
        "description": "OpenAI LLM Model",
        "parameters": [
          {
            "name": "modelName",
            "summary": "Model Name",
            "required": false,
            "description": "Name of the LLM model to load",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "temperature",
            "summary": "Temperature",
            "required": false,
            "description": "Temperature of the LLM model",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "baseUrl",
            "summary": "Server Address",
            "required": false,
            "description": "Address of the OpenAI server",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apiKey",
            "summary": "API Key",
            "required": false,
            "description": "OpenAI API Key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "configuration",
            "summary": "Configuration",
            "required": false,
            "description": "Configuration OpenAI",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "OpenAI LLM model instance successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OpenAIModel"
                },
                "example": {
                  "modelName": "gpt-4o-mini",
                  "temperature": 0,
                  "_llmType": "openai",
                  "streaming": false,
                  "configuration": {
                    "baseURL": "https://api.openai.com/v1"
                  }
                }
              }
            }
          }
        }
      }
    },
