{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-smoobu",
    "summary": "Management of rentals via Smoobu",
    "description": "This skill allows the use of the Smoobu service",
    "version": "0.1.0",
    "x-icon": "üè°"
  },
  "paths": {
    "/getReservationWithId": {
      "post": {
        "tags": ["service"],
        "summary": "Information about a Smoobu reservation",
        "parameters": [
          {
            "name": "reservationId",
            "summary": "Reservation ID",
            "required": true,
            "description": "Smoobu reservation ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "SMOOBU_API_KEY",
            "summary": "API Key",
            "required": false,
            "description": "Smoobu API key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "SMOOBU_API_ENDPOINT",
            "summary": "API Endpoint",
            "required": false,
            "description": "Smoobu API endpoint",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Reservation details successfully retrieved from Smoobu",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Smoobu reservation object with detailed information",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Reservation ID"
                    },
                    "arrival": {
                      "type": "string",
                      "description": "Arrival date"
                    },
                    "departure": {
                      "type": "string",
                      "description": "Departure date"
                    },
                    "guest_name": {
                      "type": "string",
                      "description": "Guest name"
                    },
                    "apartment": {
                      "type": "object",
                      "description": "Apartment details"
                    },
                    "price": {
                      "type": "number",
                      "description": "Total price"
                    }
                  },
                  "example": {
                    "id": "123456",
                    "arrival": "2024-01-15",
                    "departure": "2024-01-20",
                    "guest_name": "John Doe",
                    "apartment": {
                      "id": "789",
                      "name": "Deluxe Suite"
                    },
                    "price": 450.00
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sendMessage": {
      "post": {
        "tags": ["service"],
        "summary": "Send a message via Smoobu",
        "parameters": [
          {
            "name": "reservationId",
            "summary": "Reservation ID",
            "required": true,
            "description": "Smoobu reservation ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "message",
            "summary": "Message",
            "required": true,
            "description": "Message to send",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "SMOOBU_API_KEY",
            "summary": "API Key",
            "required": false,
            "description": "Smoobu API key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "SMOOBU_API_ENDPOINT",
            "summary": "API Endpoint",
            "required": false,
            "description": "Smoobu API endpoint",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Message successfully sent to guest via Smoobu",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Smoobu API response for sent message",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Whether message was sent successfully"
                    },
                    "message_id": {
                      "type": "string",
                      "description": "ID of the sent message"
                    }
                  },
                  "example": {
                    "success": true,
                    "message_id": "msg_789123"
                  }
                }
              }
            }
          }
        }
      }
    },
