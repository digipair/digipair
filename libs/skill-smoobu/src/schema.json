          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "List of reservations successfully retrieved from Smoobu",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Paginated list of Smoobu reservations",
                  "properties": {
                    "data": {
                      "type": "array",
                      "description": "Array of reservation objects",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "Reservation ID"
                          },
                          "arrival": {
                            "type": "string",
                            "description": "Arrival date"
                          },
                          "departure": {
                            "type": "string",
                            "description": "Departure date"
                          },
                          "guest_name": {
                            "type": "string",
                            "description": "Guest name"
                          }
                        }
                      }
                    },
                    "page": {
                      "type": "number",
                      "description": "Current page number"
                    },
                    "total": {
                      "type": "number",
                      "description": "Total number of reservations"
                    }
                  },
                  "example": {
                    "data": [
                      {
                        "id": "123456",
                        "arrival": "2024-01-15",
                        "departure": "2024-01-20",
                        "guest_name": "John Doe"
                      }
                    ],
                    "page": 1,
                    "total": 25
                  }
                }
              }
            }
          }
        }
      }
    }
