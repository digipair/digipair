{
  "name": "skill-codex",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/skill-codex/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/skill-codex",
        "main": "libs/skill-codex/src/index.ts",
        "tsConfig": "libs/skill-codex/tsconfig.lib.json",
        "assets": [
          "libs/skill-codex/src/index.d.ts",
          "libs/skill-codex/src/schema.json",
          "libs/skill-codex/src/schema.fr.json"
        ],
        "rollupConfig": [
          "libs/skill-codex/rollup.build.cjs"
        ],
        "project": "libs/skill-codex/package.json",
        "compiler": "swc",
        "format": [
          "cjs",
          "esm"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs skill-codex {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    }
  },
  "tags": []
}