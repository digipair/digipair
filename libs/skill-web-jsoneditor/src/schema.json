{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-web-jsoneditor",
    "summary": "JSON Editor",
    "description": "This skill allows displaying a JSON editor on a web page. The user can modify the JSON content and retrieve the modified content.",
    "version": "0.1.0",
    "x-icon": "üìê"
  },
  "paths": {
    "/digipair-jsoneditor": {
      "post": {
        "tags": ["web"],
        "summary": "JSON Editor",
        "description": "JSON Editor",
        "parameters": [
          {
            "name": "id",
            "summary": "Id",
            "description": "Id of the element.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "json",
            "summary": "JSON Content",
            "required": false,
            "description": "JSON content to display in the editor",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "contentStyle",
            "summary": "Custom Container Style",
            "required": false,
            "description": "Custom style for the container",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [
          {
            "name": "change",
            "summary": "On Change",
            "required": false,
            "description": "Action triggered when a change occurs in the editor",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "JSON editor element successfully rendered",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string",
                  "description": "HTML element containing the interactive JSON editor interface",
                  "example": "<digipair-jsoneditor id=\"editor1\" json='{\"key\": \"value\"}'><!-- JSON Editor Interface --></digipair-jsoneditor>"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
