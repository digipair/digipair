{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-pushbullet",
    "summary": "Management of the Pushbullet service",
    "description": "This skill allows the use of the Pushbullet service",
    "version": "0.1.0",
    "x-icon": "ðŸ’¬"
  },
  "paths": {
    "/sendSms": {
      "post": {
        "tags": ["service"],
        "summary": "Sends an SMS via Pushbullet",
        "parameters": [
          {
            "name": "message",
            "summary": "Message",
            "required": true,
            "description": "Message to be sent",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "phoneNumber",
            "summary": "Phone Number",
            "required": true,
            "description": "Recipient's phone number",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "PUSHBULLET_ACCESS_TOKEN",
            "summary": "API Key",
            "required": false,
            "description": "Pushbullet API key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "PUSHBULLET_TARGET_DEVICE_ID",
            "summary": "Device ID",
            "required": false,
            "description": "Pushbullet device ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "PUSHBULLET_API_ENDPOINT",
            "summary": "API Endpoint",
            "required": false,
            "description": "Pushbullet API endpoint",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "SMS sending result from Pushbullet API",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "iden": {
                      "type": "string",
                      "description": "Unique identifier for the sent text"
                    },
                    "type": {
                      "type": "string",
                      "description": "Type of the response (always 'text')"
                    },
                    "direction": {
                      "type": "string",
                      "description": "Direction of the message (outgoing/incoming)"
                    },
                    "timestamp": {
                      "type": "number",
                      "description": "Unix timestamp when the message was sent"
                    },
                    "addresses": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "List of recipient phone numbers"
                    },
                    "message": {
                      "type": "string",
                      "description": "The sent message content"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  },
  "x-scene-blocks": {}
}
