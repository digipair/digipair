{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-qrcode",
    "summary": "QRCode manipulation",
    "description": "This skill allows reading and generating QR codes",
    "version": "0.1.0",
    "x-icon": "üåê"
  },
  "paths": {
    "/encode": {
      "post": {
        "tags": ["service", "web", "spatial"],
        "summary": "QRCode encode",
        "parameters": [
          {
            "name": "data",
            "summary": "Data",
            "required": true,
            "description": "Data to encode",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "QR code successfully generated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "uri",
                  "pattern": "^data:image\/png;base64,",
                  "description": "Base64 encoded PNG image of the generated QR code as a data URL"
                }
              }
            }
          }
        }
      }
    },
    "/decode": {
      "post": {
        "tags": ["service", "web", "spatial"],
        "summary": "QRCode decode",
        "parameters": [
          {
            "name": "image",
            "summary": "Image",
            "required": true,
            "description": "Base64 image to decode",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "QR code successfully decoded",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "Decoded text/data from the QR code"
                    },
                    {
                      "type": "null",
                      "description": "No QR code found in the image"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  },
  "x-scene-blocks": {}
}
