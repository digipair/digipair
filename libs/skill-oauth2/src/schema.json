                        "refresh_token": {
                          "type": "string",
                          "description": "Refresh token"
                        }
                      }
                    },
                    "expired": {
                      "type": "string",
                      "description": "Method to check if token is expired"
                    },
                    "refresh": {
                      "type": "string",
                      "description": "Method to refresh the token"
                    },
                    "revoke": {
                      "type": "string",
                      "description": "Method to revoke the token"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
