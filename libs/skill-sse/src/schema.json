{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-sse",
    "summary": "Server Sent Events",
    "description": "This skill enables real-time communication management.",
    "version": "0.1.0",
    "x-icon": "ðŸ”—"
  },
  "paths": {
    "/registerSession": {
      "post": {
        "tags": ["service"],
        "summary": "Initialize an SSE session",
        "parameters": [
          {
            "name": "id",
            "summary": "Session identifier",
            "required": true,
            "description": "Identifier for distinguishing sessions",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "disconnected",
            "summary": "On disconnection",
            "required": false,
            "description": "Actions to execute on disconnection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "SSE session object",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Session unique identifier"
                    },
                    "isConnected": {
                      "type": "boolean",
                      "description": "Connection status"
                    },
                    "lastEventId": {
                      "type": "string",
                      "description": "Last event ID sent"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/registerChannel": {
      "post": {
        "tags": ["service"],
        "summary": "Initialize an SSE channel",
        "parameters": [
          {
            "name": "session",
            "summary": "Session instance",
            "required": false,
            "description": "Session instance to add to the channel",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "id",
            "summary": "Channel ID",
            "required": false,
            "description": "Channel ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "disconnected",
            "summary": "On disconnection",
            "required": false,
            "description": "Actions to execute on disconnection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "SSE channel object",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sessionCount": {
                      "type": "number",
                      "description": "Number of connected sessions"
                    },
                    "id": {
                      "type": "string",
                      "description": "Channel unique identifier"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/push": {
      "post": {
        "tags": ["service"],
        "summary": "Send SSE data",
        "parameters": [
          {
            "name": "id",
            "summary": "Session identifier",
            "required": true,
            "description": "Identifier for distinguishing sessions",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "message",
            "summary": "Message",
            "required": true,
            "description": "Message to send",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "reasoning",
            "summary": "Reasoning",
            "required": false,
            "description": "Reasoning name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "digipair",
            "summary": "Digipair",
            "required": false,
            "description": "Digipair",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Push operation result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Whether the push was successful"
                    },
                    "eventId": {
                      "type": "string",
                      "description": "Event identifier"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/broadcast": {
      "post": {
        "tags": ["service"],
        "summary": "Broadcast SSE data",
        "parameters": [
          {
            "name": "message",
            "summary": "Message",
            "required": true,
            "description": "Message to send",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "event",
            "summary": "event",
            "required": false,
            "description": "Event name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "summary": "Channel ID",
            "required": false,
            "description": "Channel ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "reasoning",
            "summary": "Reasoning",
            "required": false,
            "description": "Reasoning name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "digipair",
            "summary": "Digipair",
            "required": false,
            "description": "Digipair",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Broadcast operation result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Whether the broadcast was successful"
                    },
                    "sessionsCount": {
                      "type": "number",
                      "description": "Number of sessions that received the message"
                    },
                    "eventId": {
                      "type": "string",
                      "description": "Event identifier"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  },
  "x-scene-blocks": {}
}
