{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-push-notification",
    "summary": "Web Push Manipulation",
    "description": "This skill allows users to send WebPush notifications.",
    "version": "0.1.0",
    "x-icon": "ðŸ“•"
  },
  "paths": {
    "/sendPush": {
      "post": {
        "tags": ["service"],
        "summary": "Send a web push notification",
        "description": "Send a web push notification with the specified values.",
        "parameters": [
          {
            "name": "subscription",
            "summary": "Subscription",
            "required": true,
            "description": "Subscription object used to send notifications.",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "payload",
            "summary": "Payload",
            "required": true,
            "description": "Payload to insert into the notification",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "privateKey",
            "summary": "VAPID private key",
            "required": false,
            "description": "VAPID private key used for authentication.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "publicKey",
            "summary": "VAPID public key",
            "required": false,
            "description": "VAPID public key used to enable push subscription.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "mailto",
            "summary": "Mailto",
            "required": false,
            "description": "Admin email for VAPID mailto configuration.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Web push notification sending result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "number",
                      "description": "HTTP status code from push service"
                    },
                    "headers": {
                      "type": "object",
                      "description": "Response headers from push service"
                    },
                    "body": {
                      "type": "string",
                      "description": "Response body from push service"
                    },
                    "success": {
                      "type": "boolean",
                      "description": "Whether the notification was sent successfully"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
