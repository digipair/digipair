            }
          },
          {
            "name": "document",
            "summary": "Document",
            "required": true,
            "description": "Document to insert",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Documents count matching the search criteria",
            "content": {
              "application/json": {
                "schema": {
                  "type": "number",
                  "description": "Documents count"
                }
              }
            }
          }
        }
      }
    }
  },
