{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-mongodb",
    "summary": "Access to a MongoDB database",
    "description": "This skill allows you to manage a MongoDB database.",
    "version": "0.1.0",
    "x-icon": "ðŸ’»"
  },
  "paths": {
    "/database": {
      "post": {
        "tags": ["service"],
        "summary": "Connect to a MongoDB database",
        "parameters": [
          {
            "name": "url",
            "summary": "Server address",
            "required": true,
            "description": "MongoDB server address",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "database",
            "summary": "Database",
            "required": true,
            "description": "Name of the database",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Database connection established",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "client": {
                      "type": "object",
                      "description": "MongoDB client instance"
                    },
                    "database": {
                      "type": "object",
                      "description": "MongoDB database instance"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/find": {
      "post": {
        "tags": ["service"],
        "summary": "Search in a MongoDB database",
        "parameters": [
          {
            "name": "client",
            "summary": "Database connection",
            "required": false,
            "description": "Database connection client",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "options",
            "summary": "Options",
            "required": false,
            "description": "Search options",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "collection",
            "summary": "Collection",
            "required": true,
            "description": "Name of the collection",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "filter",
            "summary": "Filter",
            "required": true,
            "description": "Search filter",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Array of documents matching the search criteria",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "description": "MongoDB document",
                    "properties": {
                      "_id": {
                        "type": "string",
                        "description": "Document unique identifier"
                      }
                    },
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        }
      }
    },
    "/findOne": {
      "post": {
        "tags": ["service"],
        "summary": "Search for an item in a MongoDB database",
        "parameters": [
          {
            "name": "client",
            "summary": "Database connection",
            "required": false,
            "description": "Database connection client",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "options",
            "summary": "Options",
            "required": false,
            "description": "Search options",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "collection",
            "summary": "Collection",
            "required": true,
            "description": "Name of the collection",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "filter",
            "summary": "Filter",
            "required": true,
            "description": "Search filter",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Single document matching the search criteria, or null if not found",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "object",
                      "description": "MongoDB document",
                      "properties": {
                        "_id": {
                          "type": "string",
                          "description": "Document unique identifier"
                        }
                      },
                      "additionalProperties": true
                    },
                    {
                      "type": "null",
                      "description": "No document found"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/findById": {
      "post": {
        "tags": ["service"],
        "summary": "Search for an item by ID in a MongoDB database",
        "parameters": [
          {
            "name": "client",
            "summary": "Database connection",
            "required": false,
            "description": "Database connection client",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "options",
            "summary": "Options",
            "required": false,
            "description": "Search options",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "collection",
            "summary": "Collection",
            "required": true,
            "description": "Name of the collection",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "summary": "Identifier",
            "required": true,
            "description": "Identifier of the item",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Document found by ID, or null if not found",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "object",
                      "description": "MongoDB document",
                      "properties": {
                        "_id": {
                          "type": "string",
                          "description": "Document unique identifier"
                        }
                      },
                      "additionalProperties": true
                    },
                    {
                      "type": "null",
                      "description": "No document found with the specified ID"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/insertOne": {
      "post": {
        "tags": ["service"],
        "summary": "Insert an item into a MongoDB database",
        "parameters": [
          {
            "name": "client",
            "summary": "Database connection",
            "required": false,
            "description": "Database connection client",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "options",
            "summary": "Options",
            "required": false,
            "description": "Insert options",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "collection",
            "summary": "Collection",
            "required": true,
            "description": "Name of the collection",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "document",
            "summary": "Document",
            "required": true,
            "description": "Document to insert",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Result of the insert operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "acknowledged": {
                      "type": "boolean",
                      "description": "Whether the operation was acknowledged by MongoDB"
                    },
                    "insertedId": {
                      "type": "string",
                      "description": "The ObjectId of the inserted document"
                    }
                  },
                  "required": ["acknowledged", "insertedId"]
                }
              }
            }
          }
        }
      }
    },
    "/updateOne": {
      "post": {
        "tags": ["service"],
        "summary": "Update an item in a MongoDB database",
        "parameters": [
          {
            "name": "client",
            "summary": "Database connection",
            "required": false,
            "description": "Database connection client",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "options",
            "summary": "Options",
            "required": false,
            "description": "Update options",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "collection",
            "summary": "Collection",
            "required": true,
            "description": "Name of the collection",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "filter",
            "summary": "Filter",
            "required": true,
            "description": "Search filter",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "update",
            "summary": "Update filter",
            "required": true,
            "description": "Update filter",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Result of the update operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "acknowledged": {
                      "type": "boolean",
                      "description": "Whether the operation was acknowledged by MongoDB"
                    },
                    "matchedCount": {
                      "type": "number",
                      "description": "Number of documents that matched the filter"
                    },
                    "modifiedCount": {
                      "type": "number",
                      "description": "Number of documents that were actually modified"
                    },
                    "upsertedCount": {
                      "type": "number",
                      "description": "Number of documents that were upserted"
                    },
                    "upsertedId": {
                      "type": ["string", "null"],
                      "description": "The ObjectId of the upserted document, if any"
                    }
                  },
                  "required": ["acknowledged", "matchedCount", "modifiedCount", "upsertedCount"]
                }
              }
            }
          }
        }
      }
    },
