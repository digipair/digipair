{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-llm",
    "summary": "Lanchain",
    "description": "The @digipair/skill-llm skill allows the use of a large-scale language model.",
    "version": "0.1.0",
    "x-icon": "ðŸš€"
  },
  "paths": {
    "/invoke": {
      "post": {
        "tags": ["service"],
        "summary": "LLM Reasoning",
        "parameters": [
          {
            "name": "execute",
            "required": true,
            "description": "Execute",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "input",
            "summary": "Input Data",
            "required": false,
            "description": "input",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Result of the LLM reasoning chain execution",
            "content": {
              "application/json": {
                "schema": {
                  "description": "The result can be any type depending on the executed chain steps"
                }
              }
            }
          }
        }
      }
    },
    "/reasoningStep": {
      "post": {
        "tags": ["service"],
        "summary": "Reasoning Step",
        "parameters": [
          {
            "name": "attributes",
            "summary": "Data",
            "required": true,
            "description": "attributes",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/reasonningStepAttribute"
              }
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Object containing reasoning step functions mapped to attribute names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Object with keys corresponding to attribute names and values as async functions",
                  "additionalProperties": {
                    "type": "object",
                    "description": "Async function that can be called with previous context"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/basic": {
      "post": {
        "tags": ["service"],
        "summary": "Generate",
        "description": "Text generation via an LLM model",
        "parameters": [
          {
            "name": "prompt",
            "summary": "Prompt",
            "required": true,
            "description": "Prompt to execute via the LLM model",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "model",
            "summary": "LLM Model",
            "required": false,
            "description": "LLM model to load",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "schema",
            "summary": "Schema",
            "required": false,
            "description": "JSON schema of the data to extract",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "LLM-generated response - text or structured data based on schema parameter",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "Generated text response when no schema is provided"
                    },
                    {
                      "type": "object",
                      "description": "Structured JSON object matching the provided schema when schema parameter is used"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/vision": {
      "post": {
        "tags": ["service"],
        "summary": "See",
        "description": "Use an LLM model that can read images and text as input",
        "parameters": [
          {
            "name": "model",
            "summary": "Vision Model",
            "required": false,
            "description": "Vision model to load",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "prompt",
            "summary": "Prompt",
            "required": true,
            "description": "Prompt to execute on the LLM model",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "image",
            "summary": "Image",
            "required": true,
            "description": "Base64 image",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "schema",
            "summary": "JSON Schema",
            "required": false,
            "description": "JSON schema of the data to extract",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Vision model response - text or structured data based on schema and image analysis",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "Generated text description of the image when no schema is provided"
                    },
                    {
                      "type": "object",
                      "description": "Structured JSON object with image analysis results matching the provided schema when schema parameter is used"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/summarization": {
      "post": {
        "tags": ["service"],
        "summary": "Summarize Text",
        "description": "Summarize text via an LLM model",
        "parameters": [
          {
            "name": "model",
            "summary": "LLM Model",
            "required": false,
            "description": "LLM model to load",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "chunkSize",
            "summary": "Text Chunk Size",
            "required": false,
            "description": "Size of text chunks",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "type",
            "summary": "Algorithm",
            "required": false,
            "description": "Algorithm to use for summarizing the text",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "prompt",
            "summary": "Text",
            "required": true,
            "description": "Text to summarize",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "combineMapPrompt",
            "summary": "",
            "required": false,
            "description": "combineMapPrompt",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "combinePrompt",
            "summary": "",
            "required": false,
            "description": "combinePrompt",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "returnIntermediateSteps",
            "summary": "",
            "required": false,
            "description": "returnIntermediateSteps",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "refinePrompt",
            "summary": "",
            "required": false,
            "description": "refinePrompt",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "questionPrompt",
            "summary": "",
            "required": false,
            "description": "questionPrompt",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "verbose",
            "summary": "Debug",
            "required": false,
            "description": "Adds debug logs",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Summarized text generated by the LLM model",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "Condensed summary of the input document text"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "reasonningStepAttribute": {
        "tags": ["service"],
        "summary": "Data",
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "summary": "Name"
          },
          "value": {
            "summary": "Value",
            "type": "array",
            "items": {
              "$ref": "https://schemas.digipair.ai/pinsSettings"
            }
          }
        },
        "required": ["name", "value"]
      }
    }
  }
}
