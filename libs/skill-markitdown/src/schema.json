{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-markitdown",
    "summary": "Markdown file conversion",
    "description": "This skill allows converting PDF, DOCX, etc. files to Markdown.",
    "version": "0.1.0",
    "x-icon": "ðŸ“„"
  },
  "paths": {
    "/convert": {
      "post": {
        "tags": ["service"],
        "summary": "Convert to markdown",
        "parameters": [
          {
            "name": "file",
            "summary": "File",
            "required": true,
            "description": "File to convert",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "path",
            "summary": "Path to the executable",
            "required": false,
            "description": "Path to the markitdown executable",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "Converted markdown content"
                },
                "example": "# Document Title\n\nThis is the converted markdown content from the original file.\n\n## Section 1\n\nSample paragraph with text content."
              }
            }
          }
        }
      }
    }
  },
