  "paths": {
    "/connect": {
      "post": {
        "tags": ["service", "web", "spacial"],
        "summary": "Websocket server connection",
        "parameters": [
          {
            "name": "url",
            "summary": "URL",
            "required": false,
            "description": "Websocket server URL",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "retryInterval",
            "summary": "Retry interval",
            "required": false,
            "description": "Time interval between each connection retry",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "maxRetries",
            "summary": "Maximum retries",
            "required": false,
            "description": "Maximum number of connection retries",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "message",
            "summary": "Upon a message",
            "required": false,
            "description": "Action triggered upon receiving a message",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "open",
            "summary": "Upon opening",
            "required": false,
            "description": "Action triggered upon opening a connection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "close",
            "summary": "Upon closing",
            "required": false,
            "description": "Action triggered upon closing a connection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "error",
            "summary": "Upon an error",
            "required": false,
            "description": "Action triggered upon an error",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          }
        ]
      }
    },
    "/send": {
      "post": {
        "tags": ["service", "web", "spacial"],
        "summary": "Send message",
        "parameters": [
          {
            "name": "websocket",
            "summary": "Websocket",
            "required": false,
            "description": "Websocket to use",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "message",
            "summary": "Message",
            "required": true,
            "description": "Message to send",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": []
      }
    },
    "/close": {
      "post": {
        "tags": ["service", "web", "spacial"],
        "summary": "Close Websocket",
        "parameters": [
          {
            "name": "websocket",
            "summary": "Websocket",
            "required": false,
            "description": "Websocket to close",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": []
      }
    }
