          "schema": {
            "type": "array",
            "items": {
              "$ref": "https://schemas.digipair.ai/pinsSettings"
            }
          }
        },
        {
          "name": "browserInitialize",
          "summary": "During browser initialization",
          "required": false,
          "description": "Action triggered during browser initialization",
          "schema": {
            "type": "array",
            "items": {
              "$ref": "https://schemas.digipair.ai/pinsSettings"
            }
          }
        },
        {
          "name": "browserLoad",
          "summary": "When the page is loaded",
