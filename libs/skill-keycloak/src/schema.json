{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-keycloak",
    "summary": "Display of secure web pages",
    "description": "This skill encompasses the knowledge and use of web technologies necessary to develop and maintain websites secured by Keycloak.",
    "version": "0.1.0",
    "x-icon": "üîê"
  },
  "paths": {
    "/executeFactory": {
      "post": {
        "summary": "In the factory",
        "description": "Execution of a list of capabilities in the factory",
        "tags": ["web"],
        "metadata": [],
        "parameters": [
          {
            "name": "execute",
            "summary": "Execute",
            "required": true,
            "description": "List of capabilities to execute",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.digipair.ai/pinsSettings"
              }
            }
          },
          {
            "name": "secured",
            "summary": "Secured",
            "required": false,
            "description": "Secures execution via a Keycloak token",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Execution successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "JSON string containing the execution result from the factory"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Missing or invalid Keycloak token when secured=true"
          },
          "403": {
            "description": "Forbidden - Access denied by Keycloak"
          },
          "500": {
            "description": "Server error - Factory execution error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "User authentication",
        "description": "User authentication on the website via the Keycloak server",
        "tags": ["web"],
        "metadata": [],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Login initiated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Login response from Keycloak"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid login parameters"
          },
          "500": {
            "description": "Server error - Keycloak authentication error"
          }
        }
      }
    },
    "/logout": {
      "post": {
        "summary": "User logout",
        "description": "User logout from the website via the Keycloak server",
        "tags": ["web"],
        "metadata": [],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Logout successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Logout confirmation from Keycloak"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid logout request"
          },
          "500": {
            "description": "Server error - Keycloak logout error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SecuredInput": {
        "type": "object",
        "tags": ["boost"],
        "summary": "Secure input",
        "properties": {
          "prompt": {
            "type": "boolean"
          },
          "required": {
            "type": "boolean"
          },
          "selector": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "inputs": {
            "type": "array",
            "items": {
              "$ref": "https://schemas.digipair.ai/pinsSettings"
            }
          }
        },
        "required": []
      },
      "SecuredStep": {
        "type": "object",
        "tags": ["boost"],
        "summary": "Step",
        "properties": {
          "name": {
            "summary": "Step name",
            "type": "string"
          },
          "execute": {
            "summary": "Actions to execute",
            "type": "array",
            "items": {
              "$ref": "https://schemas.digipair.ai/pinsSettings"
            }
          }
        },
        "required": ["name", "execute"]
      },
      "ContextParameter": {
        "type": "object",
        "tags": ["service"],
        "summary": "Context Parameter",
        "properties": {
          "name": {
            "summary": "Name",
            "type": "string"
          },
          "summary": {
            "summary": "Summary",
            "type": "string"
          },
          "required": {
            "summary": "Required",
            "type": "boolean"
          },
          "schema": {
            "summary": "Schema",
            "type": "object"
          },
          "description": {
            "summary": "Summary",
            "type": "string"
          }
        },
        "required": ["name", "summary", "required", "schema"]
      }
    }
  },
  "x-scene-blocks": {
    "/page": {
