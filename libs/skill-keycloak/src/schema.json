              "$ref": "https://schemas.digipair.ai/pinsSettings"
            }
          }
        },
        {
          "name": "unlogged",
          "summary": "If the user is not authenticated",
          "required": false,
          "description": "Action triggered when the page is loaded in the browser if the user is not authenticated",
          "schema": {
            "type": "array",
            "items": {
              "$ref": "https://schemas.digipair.ai/pinsSettings"
            }
          }
        },
        {
          "name": "logged",
          "summary": "If the user is authenticated",
          "required": false,
          "description": "Action triggered when the page is loaded in the browser if the user is authenticated",
          "schema": {
            "type": "array",
            "items": {
              "$ref": "https://schemas.digipair.ai/pinsSettings"
            }
          }
        },
        {
          "name": "confirmBeforeUnload",
          "summary": "Confirmation before leaving the page",
          "required": false,
          "description": "Confirmation message before leaving the page",
          "schema": {
            "type": "string"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Secure web page rendered successfully",
          "content": {
            "text/html": {
              "schema": {
                "type": "string",
                "description": "HTML page with Keycloak integration and security"
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized - Keycloak authentication required"
        },
        "403": {
          "description": "Forbidden - Access denied by Keycloak"
        },
        "404": {
          "description": "Not found - Page or resource not found"
        },
        "500": {
          "description": "Server error - Page rendering error"
        }
      }
    },
