          "schema": {
            "type": "string"
          }
        },
        {
          "name": "clientId",
          "summary": "Client ID",
          "required": false,
          "description": "Client ID of the Keycloak server",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "factoryUrl",
          "summary": "Factory address",
