{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-basic",
    "summary": "Data Management",
    "description": "This skill allows for the manipulation and transformation of data.",
    "version": "0.1.0",
    "x-icon": "üìù"
