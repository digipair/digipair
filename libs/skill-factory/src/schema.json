        "tags": [
          "service"
        ],
        "summary": "Start a reasoning",
        "description": "Start a reasoning from the Digipair factory",
        "parameters": [
          {
            "name": "digipair",
            "summary": "Digipair",
            "required": false,
            "description": "Owner of the reasoning",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "reasoning",
            "summary": "Reasoning",
            "required": true,
            "description": "Name of the reasoning",
            "schema": {
              "type": "string"
            }
          },
