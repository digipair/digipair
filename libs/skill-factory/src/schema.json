            "name": "body",
            "summary": "Data",
            "required": false,
            "description": "Data to send",
            "schema": {
              "type": "object"
            }
          },
          {
            "name": "factory",
            "summary": "Factory",
            "required": false,
            "description": "Nom de la factory",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Reasoning started successfully",
