{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-process",
    "summary": "Process management",
    "description": "This skill allows you to manage processes.",
    "version": "0.1.0",
    "x-icon": "ðŸ“•"
  },
  "paths": {
    "/stop": {
      "post": {
        "tags": [
          "service"
        ],
        "summary": "Stop a process",
        "description": "Stop a running process.",
        "parameters": [
          {
            "name": "id",
            "summary": "Identifier",
            "required": true,
            "description": "Identifier of the process to stop",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Boolean indicating whether the process was successfully stopped",
            "content": {
              "application/json": {
                "schema": {
                  "type": "boolean",
                  "description": "True if process was found and stopped, false if process was not found"
                }
              }
            }
          }
        },
        "x-events": []
      }
    },
    "/list": {
      "post": {
        "tags": [
          "service"
        ],
        "summary": "List of processes",
        "description": "List the running processes.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Array of running process information objects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "Unique process identifier"
                      },
                      "digipair": {
                        "type": "string",
                        "description": "Digipair identifier associated with the process"
                      },
                      "reasoning": {
                        "type": "string",
                        "description": "Reasoning or description of the process"
                      },
                      "time": {
                        "type": "number",
                        "description": "Timestamp when the process was created"
                      }
                    },
                    "required": [
                      "id",
                      "digipair",
                      "reasoning",
                      "time"
                    ]
                  }
                }
              }
            }
          }
        },
        "x-events": []
      }
    }
  },
  "components": {
    "schemas": {}
  }
}