{
  "openapi": "3.0.0",
  "info": {
    "title": "@digipair/skill-heygen",
    "summary": "Heygen API",
    "description": "This skill allows managing communication with Heygen servers.",
    "version": "0.1.0",
    "x-icon": "ðŸ”—"
  },
  "paths": {
    "/newSession": {
      "post": {
        "tags": ["service"],
        "summary": "Create a Heygen session",
        "parameters": [
          {
            "name": "serverUrl",
            "summary": "URL",
            "required": false,
            "description": "Heygen server URL",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apiKey",
            "summary": "Heygen API Key",
            "required": false,
            "description": "Heygen API Key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "quality",
            "summary": "Quality",
            "required": false,
            "description": "Voice quality",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "avatar",
            "summary": "Avatar",
            "required": true,
            "description": "Voice avatar",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "voice",
            "summary": "Voice",
            "required": true,
            "description": "Voice voice",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "HeyGen session created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "HeyGen session data with session ID and connection details",
                  "properties": {
                    "session_id": {
                      "type": "string",
                      "description": "Unique session identifier"
                    },
                    "sdp": {
                      "type": "object",
                      "description": "Session Description Protocol data"
                    },
                    "ice_servers": {
                      "type": "array",
                      "description": "ICE server configuration"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid avatar or voice parameters"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key"
          },
          "500": {
            "description": "Server error - HeyGen API internal error"
          }
        }
      }
    },
    "/handleICE": {
      "post": {
        "tags": ["service"],
        "summary": "Heygen ICE",
        "parameters": [
          {
            "name": "serverUrl",
            "summary": "URL",
            "required": false,
            "description": "Heygen server URL",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apiKey",
            "summary": "Heygen API Key",
            "required": false,
            "description": "Heygen API Key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sessionId",
            "summary": "Session",
            "required": true,
            "description": "Session ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "candidate",
            "summary": "ICE Candidate",
            "required": true,
            "description": "ICE Candidate",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "ICE candidate handled successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "ICE handling confirmation from HeyGen API"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid session ID or candidate data"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key"
          },
          "404": {
            "description": "Not found - Session not found"
          },
          "500": {
            "description": "Server error - HeyGen API internal error"
          }
        }
      }
    },
    "/startSession": {
      "post": {
        "tags": ["service"],
        "summary": "Start Heygen session",
        "parameters": [
          {
            "name": "serverUrl",
            "summary": "URL",
            "required": false,
            "description": "Heygen server URL",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apiKey",
            "summary": "Heygen API Key",
            "required": false,
            "description": "Heygen API Key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sessionId",
            "summary": "Session",
            "required": true,
            "description": "Session ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sdp",
            "summary": "SDP",
            "required": true,
            "description": "SDP",
            "schema": {
              "type": "object"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "HeyGen session started successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Session start confirmation with streaming details",
                  "properties": {
                    "session_id": {
                      "type": "string",
                      "description": "Active session identifier"
                    },
                    "status": {
                      "type": "string",
                      "description": "Session status"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid session ID or SDP data"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key"
          },
          "404": {
            "description": "Not found - Session not found"
          },
          "500": {
            "description": "Server error - HeyGen API internal error"
          }
        }
      }
    },
    "/talk": {
      "post": {
        "tags": ["service"],
        "summary": "Talk with Heygen",
        "parameters": [
          {
            "name": "serverUrl",
            "summary": "URL",
            "required": false,
            "description": "Heygen server URL",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apiKey",
            "summary": "Heygen API Key",
            "required": false,
            "description": "Heygen API Key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sessionId",
            "summary": "Session",
            "required": true,
            "description": "Session ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "text",
            "summary": "Text",
            "required": true,
            "description": "Text to say",
            "schema": {
              "type": "string"
            }
          }
        ],
        "x-events": [],
        "responses": {
          "200": {
            "description": "Avatar speech generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Speech generation confirmation with task details",
                  "properties": {
                    "task_id": {
                      "type": "string",
                      "description": "Speech task identifier"
                    },
                    "status": {
                      "type": "string",
                      "description": "Task status"
                    },
                    "duration": {
                      "type": "number",
                      "description": "Estimated speech duration"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid session ID or text content"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key"
          },
          "404": {
            "description": "Not found - Session not found or inactive"
          },
          "500": {
            "description": "Server error - HeyGen API internal error"
          }
        }
      }
    },
    "/stop": {
      "post": {
        "tags": ["service"],
        "summary": "Stop Heygen session",
        "parameters": [
          {
            "name": "serverUrl",
            "summary": "URL",
            "required": false,
            "description": "Heygen server URL",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apiKey",
            "summary": "Heygen API Key",
            "required": false,
